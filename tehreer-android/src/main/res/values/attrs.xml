<resources>
    <declare-styleable name="TLabel">
        <attr name="gravity">
            <flag name="top" value="0x30"/>
            <flag name="bottom" value="0x50"/>
            <flag name="left" value="0x03"/>
            <flag name="right" value="0x05"/>
            <flag name="start" value="0x00800003"/>
            <flag name="end" value="0x00800005"/>
            <flag name="center_vertical" value="0x10"/>
            <flag name="center_horizontal" value="0x01"/>
            <flag name="center" value="0x11"/>
        </attr>
        <attr name="maxLines" format="integer" />
        <attr name="extraLineSpacing" format="dimension" />
        <attr name="lineHeightMultiplier" format="float" />
        <attr name="shadowRadius" format="dimension" />
        <attr name="shadowDx" format="dimension" />
        <attr name="shadowDy" format="dimension" />
        <attr name="shadowColor" format="color" />
        <attr name="text" format="string" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="truncationPlace" format="enum">
            <enum name="none" value="0"/>
            <enum name="end" value="1"/>
            <enum name="middle" value="2"/>
            <enum name="start" value="3"/>
        </attr>
        <attr name="truncationMode" format="enum">
            <enum name="line" value="0"/>
            <enum name="character" value="1"/>
        </attr>
        <attr name="typeface" format="reference" />
    </declare-styleable>
</resources>
