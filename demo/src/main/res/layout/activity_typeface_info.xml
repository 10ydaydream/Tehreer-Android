                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_variations_postscript_name_prefix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/NameKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Variations PostScript Name Prefix:"/>

                <TextView
                    style="@style/NameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
