<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <Spinner
        android:id="@+id/spinner_typeface"
        style="@style/FormSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"/>

    <ScrollView
        android:id="@+id/scroll_view_font_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_copyright"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/NameKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Copyright Notice:"/>

                <TextView
                    style="@style/NameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_font_family"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/NameKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Font Family Name:"/>

                <TextView
                    style="@style/NameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_font_subfamily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/NameKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Font Subfamily Name:"/>

                <TextView
                    style="@style/NameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_unique_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/NameKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unique Font Identifier:"/>

                <TextView
                    style="@style/NameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/NameKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Font Name:"/>

                <TextView
                    style="@style/NameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/NameKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Version String:"/>

                <TextView
                    style="@style/NameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_postscript_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/NameKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PostScript Name:"/>

                <TextView
                    style="@style/NameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_trademark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/NameKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trademark:"/>

                <TextView
                    style="@style/NameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_manufacturer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/NameKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manufacturer Name:"/>

                <TextView
                    style="@style/NameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_designer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/NameKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Designer Name:"/>

                <TextView
                    style="@style/NameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/NameKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Typeface Description:"/>

                <TextView
                    style="@style/NameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_vendor_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/NameKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vendor URL:"/>

                <TextView
                    style="@style/NameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_designer_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/NameKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Designer URL:"/>

                <TextView
                    style="@style/NameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_license"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
