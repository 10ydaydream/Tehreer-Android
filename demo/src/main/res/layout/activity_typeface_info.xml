            <LinearLayout
                android:id="@+id/layout_typographic_subfamily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/NameKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Typographic Subfamily Name:"/>

                <TextView
                    style="@style/NameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_mac_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/NameKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Compatible Full (Macintosh Only):"/>

                <TextView
                    style="@style/NameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_sample_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/NameKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sample Text:"/>

                <com.mta.tehreer.widget.TLabel
                    style="@style/NameSample"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_postscript_cid_findfont_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/NameKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PostScript CID “findfont” Name:"/>

                <TextView
                    style="@style/NameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_wws_family"
