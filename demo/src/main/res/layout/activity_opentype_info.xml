<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/black"
        android:orientation="horizontal"
        android:paddingBottom="1.5dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingTop="1dp"
        android:weightSum="1">

        <TextView
            style="@style/ShapingHeader"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="0.24"
            android:text="Character"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.76"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_glyph_id"
                style="@style/ShapingHeader"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="0.32"
                android:text="Glyph ID"/>

            <TextView
                android:id="@+id/text_view_offset"
                style="@style/ShapingHeader"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="0.40"
                android:text="Glyph Offset"/>

            <TextView
                android:id="@+id/text_view_advance"
                style="@style/ShapingHeader"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.28"
                android:text="Glyph Advance"/>
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/list_view_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="2dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp"
        android:scrollbarStyle="outsideOverlay"/>
</LinearLayout>
