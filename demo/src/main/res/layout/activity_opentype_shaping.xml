<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <TextView
            style="@style/FormHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Typeface"/>

        <Spinner
            android:id="@+id/spinner_typeface"
            style="@style/FormSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            style="@style/FormHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type Size"/>

        <EditText
            android:id="@+id/field_type_size"
            style="@style/FormField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLines="1"
            android:text="2048"/>

        <TextView
            style="@style/FormHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Script Tag"/>

        <EditText
            android:id="@+id/field_script_tag"
            style="@style/FormField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:text="arab"/>

        <TextView
            style="@style/FormHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language Tag"/>

        <EditText
            android:id="@+id/field_language_tag"
            style="@style/FormField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:text="dflt"/>

        <TextView
            style="@style/FormHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Input Text"/>

        <EditText
            android:id="@+id/field_text"
            style="@style/FormField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:scrollbars="vertical"
            android:text="زبان کو مختلف علامتوں اور رموز کے ذریعے لکھنے کو تحریر کہتے ہیں۔"/>
    </LinearLayout>
</ScrollView>
