<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="36dp"
            android:paddingRight="36dp"
            android:paddingTop="16dp">

            <Button
                android:id="@+id/button_bidi_algorithm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bidirectional Algorithm"/>

            <Button
                android:id="@+id/button_typeface_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Typeface Information"/>

            <Button
                android:id="@+id/button_typeface_glyphs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Typeface Glyphs"/>

            <Button
                android:id="@+id/button_opentype_shaping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OpenType Shaping"/>

            <Button
                android:id="@+id/button_label_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Label Widget"/>

            <Button
                android:id="@+id/button_variable_fonts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Variable Fonts"/>

            <Button
                android:id="@+id/button_open_source_licenses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open Source Licenses"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
